{
    "log": {
        "loglevel": "info"
    },
    "inbounds": [
        {
            "port": 1232,
            "tag": "mydirect",
            "protocol": "shadowsocks",
            "settings": {
                "method": "aes-256-gcm",
                "password": "PASSWORD",
                "level": 1
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "settings": {},
            "tag": "direct"
        }
    ],
    "routing": {
        "strategy": "rules",
        "settings": {
            "rules": [
                {
                    "type": "field",
                    "outboundTag": "direct",
                    "inboundTag": [
                        "mydirect"
                    ]
                },
                {
                    "type": "field",
                    "domain": [
                        "regexp:.*\\.ir$"
                    ],
                    "outboundTag": "direct"
                },
                {
                    "type": "field",
                    "ip": [
                        "geoip:private",
                        "geoip:ir"
                    ],
                    "outboundTag": "direct"
                }
            ]
        }
    }
}

